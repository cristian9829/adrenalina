<div class="section__show">
	<div class="container">
		<div class="row">
			<%= link_to 'volver', admin_blogs_path, class: "btn btn-link" %>
		</div>
		<div class="row">
			<div class="col">
				<h1>Blog de <%= @blog.title %></h1>
			</div>
			<div class="col">
				<h6>Creado: <%= @blog.created_at %></h6>
				<h6>Ultima Actualizacion: <%= @blog.updated_at %> </h6>
			</div>
		</div>
		<hr>
		<div class="jumbotron">
			<div class="row">
				<div class="col-md-3">
					<h3>Titúlo:</h3>
				</div>
				<div class="col-md-8">
					<h4><%= @blog.title %></h4>
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">
					<h3>Descripción:</h3>
				</div>
				<div class="col-md-8">
					<p><%= @blog.description %></p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">
					<h3>Efectos:</h3>
				</div>
				<div class="col-md-8">
					<p><%= raw @blog.content %></p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">
					<h3>Url de la imagen:</h3>
				</div>
				<div class="col">
					<p><%= @blog.image_url%></p>
				</div>
			</div>
		</div>
	</div>
</div>