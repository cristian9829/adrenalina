<div class="section__signup">
  <div class="container">
      <div class="row">
        <div class="col-md-6 jumbotron" style="margin: 0 auto;">
          <h2>Registrarse</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :Correo_electronico %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "emai", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :ContraseÃ±a %><br/>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caraceteres minimo)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :Confirmacion_de_ContraseÃ±a %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Registrar", class: "btn btn-warning" %>
              </div>
            <% end %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>  
</div>

